@using Model.Data
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}
<link href="~/Content/magic-check.min.css" rel="stylesheet" />

<style>
    tr.group, tr.group:hover {
        background-color: #eaeaea !important;
        cursor: pointer;
        color: #0b0b0c
    }

    table tr .dt-body-center {
        text-align: center
    }

    table tr td {
        vertical-align: middle !important
    }

    td input[type=text], td textarea {
        resize: none;
        width: 100% !important
    }

    #tbQualityParameter input[type=text], #tbQualityParameter textarea {
        height: 2.5em !important
    }

    #tbQuantityParameter input[type=text], #tbQuantityParameter textarea {
        height: 8em !important
    }

    table td input[type=checkbox] {
        width: 17px;
        height: 17px
    }

    #tbEquip .dataTables_wrapper .dataTables_filter, .dataTables_wrapper .dataTables_paginate {
        margin-top: 5px;
        float: left;
        text-align: left
    }

    .dataTables_wrapper {
        position: relative;
        clear: both;
        width: auto;
        min-height: 300px;
        margin-left: 0;
        zoom: 1
    }

    #tbMAY_wrapper .dataTables_wrapper {
        min-height: 260px
    }

    div[data-toggle=buttons] label, label.btn span {
        font-size: 14px
    }

    td .btn {
        font-size: 17px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href='#' data-lang="lblListMonitoringDevice">Danh sách giám sát máy</a></li>
            <li class="breadcrumb-item active" data-lang="lblGiamSatThongSo">Giám sát thông số thiết bị</li>
        </ol>
    </div>
</div>
<div ng-controller="MonitoringController" ng-init="fn.Init()">
    @if (ViewBag.link == 1)
    {
        <input type="hidden" id="link" name="link" value="@ViewBag.link">
        <input type="hidden" id="nx" name="nx" value="@ViewBag.nx">
        <input type="hidden" id="may" name="may" value="@ViewBag.may">
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group responsive">
                            <label data-lang="lblDiaDiem" >Địa điểm</label>
                            @Html.DropDownList("cbbDiaDiem", ViewBag.NhaXuong as SelectList, new { name = "cbbDiaDiem", data_live_search = "true", data_slide = "left", @class = "form-control select-one select2", @style = "width:100%" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label data-lang="lblDevice">Thiết bị</label>
                            <div class="input-group">
                                <input class="form-control" type="text" id="txtDevice" />
                                <a class="input-group-addon" ng-click="fn.ShowEquipForm();" href="#"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label>Nhân viên kiểm tra</label>
                            @Html.DropDownList("cbbNhanVien", ViewBag.NhanVien as SelectList, new { name = "cbbNhanVien", data_live_search = "true", data_slide = "left", @class = "form-control select-one select2", @style = "width:100%" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <div id="divButtonDefault" class="toolbar-action">
                    <button ng-click="fn.Submit();" type="button" title="Save" data-lang="btnGhi" class="btn btn-default pull-right">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    </button>

                    <button ng-click="fn.chonkhongdat();" type="button" title="chọn tất cả không đạt" data-lang="btnchonkhongdat" class="btn btn-default pull-right">
                        <i class="fa fa-check-square" aria-hidden="true"></i>
                    </button>

                    <button ng-click="fn.chondat();" type="button" title="chọn tất cả đạt" data-lang="btnchondat" class="btn btn-default pull-right">
                        <i class="fa fa-check-square-o" aria-hidden="true"></i>
                    </button>

                    <button ng-click="fn.bochon();" type="button" title="Bỏ chọn" data-lang="btnbochon" class="btn btn-default pull-right">
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                    </button>

                </div>
                <ul id="myTabs" class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#tabThongSoDT" id="tab1" aria-controls="tabThongSoDT" role="tab" data-toggle="tab" @*data-lang="tabThongSoDT"*@>định tính</a></li>
                    <li role="presentation"><a href="#tabThongSoDL" aria-controls="tabThongSoDL" role="tab" data-toggle="tab" @*data-lang="tabThongSoDL"*@>định lượng</a></li>
                </ul>
                <h6 style="margin: 20px 0 0 0;"></h6>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="tabThongSoDT">

                        <div class=" row">
                            @*<div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12" data-toggle="buttons">
                                    <label class="btn">
                                        <input class="form-control" type="checkbox" id="ckDueParameter" />
                                        <i class="fa fa-square-o"></i><i class="fa fa-check-square-o"></i>
                                        <span data-lang="lblThongSoDenHan"> Thông số đến hạn</span>
                                    </label>
                                </div>*@
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="radio">
                                    <label><input type="radio" name="optradio" value="0">Xem tất cả</label>
                                </div>
                                <div class="radio">
                                    <label><input type="radio" name="optradio" value="1" checked>Xem thông số đến hạn giám sát</label>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                                <div class="form-group">
                                    <label data-lang="lblTungay">Từ ngày</label>
                                    <input class="form-control" type="text" id="fromDate" data-type="datepicker" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                                <div class="form-group">
                                    <label>Loại công việc</label>
                                    @Html.DropDownList("cbbLoaiCV", ViewBag.LoaiCV as SelectList, new { name = "cbbLoaiCV", data_live_search = "true", data_slide = "left", @class = "form-control select-one select2", @style = "width:100%" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-lg-12">
                                <div class="form-group">
                                    <div class="table-responsive" style="overflow: auto">
                                        <table id="tbQualityParameter" class="table table-bordered table-condensed ">
                                            <thead>
                                                <tr>
                                                    <th class="">Group </th>
                                                    <th style="width:120px" data-lang="Choose">Chọn</th>
                                                    <th data-lang="TEN_GIA_TRI">Giá trị</th>
                                                    <th data-lang="Note">Ghi chú</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="tabThongSoDL">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="table-responsive" style="overflow: auto">
                                        <table id="tbQuantityParameter" class="table table-bordered table-condensed ">
                                            <thead>
                                                <tr>
                                                    <th class="">Group</th>
                                                    <th data-lang="TEN_GIA_TRI">Giá trị</th>
                                                    <th style="width:80px" data-lang="IN">IN</th>
                                                    <th data-lang="Note">Ghi chú</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="divButtonFloat" class="kc_fab_wrapper"></div>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" style="color: #15428B !important;" data-lang="lblChooseDevice">Chọn máy</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive" style="overflow:auto">
                                <table id="tbEquip" style="width:100%" class="table table-bordered table-striped table-condensed ">
                                    <thead>
                                        <tr>
                                            <th data-lang="DeviceID">DeviceID</th>
                                            <th data-lang="Description">Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr data-id="@item.ID">
                                                <td style="width: 150px">@item.ID</td>
                                                <td>@item.Name</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="divGhi" class="row ">
                        <div class="col-sm-3 col-md-2 col-xs-4 col-lg-3 pull-right">
                            <div class="form-group">
                                <input type="button" data-dismiss="modal" data-lang="btnHuy" style="color: #fff; width: 100%;" class="btn-flat flat" value="Hủy">
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-2 col-xs-4 col-lg-3 pull-right">
                            <div class="form-group">
                                <input type="button" id="btnChooseEquip" style="color: #fff; width: 100%;" data-lang="btnChon" class="btn-flat flat" value="Chon">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var urlConditionMonitoringParameterGet = '@Url.Action("GetMonitoringParameters", "Monitoring")'
        var urlConditionMonitoringParameterSave = '@Url.Action("Save", "Monitoring")'
        var urlCheckTheParametersDue = '@Url.Action("CheckTheParametersDue", "Monitoring")'
        require(['MonitoringController'])
    </script>
</div>